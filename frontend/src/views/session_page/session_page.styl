.session-page
  position: relative
  margin-bottom: 50px
  clearfix()

  &__copy-btn
    padding-top: 10px

  &__button
    position: absolute
    top: 27px
    right: 20px
    width: 300px

    @media $mobile-max
      position: relative
      right: 0
      width: 100%
      padding-right: 20px
      padding-left: 20px

  &__footer
    padding: 20px
    padding-top: 40px
    width: 100%
    @media $mobile-max
      padding: 20px

  &__footer-button
    width: 200px
    display: inline-block
    margin-right: 15px
    @media $mobile-max
      width: 100%
      padding-right: 0
      margin: 0
      margin-bottom: 10px



  &__confirm-order-button
    margin-top: 20px
    margin-left: 40px

    @media $mobile-max
      margin-top: 10px
      margin-left: 20px
      width: calc(100% - 40px)

  &__delete-session-button
    margin-top: 20px
    margin-left: 20px

    @media $mobile-max
      margin-top: 10px
      margin-left: 20px
      width: calc(100% - 40px)

  &__header
    position: relative
    @media $mobile-max
      padding-bottom: 40px

  &__header-title
    page_header_title()
    margin-bottom: 0

    @media $tablet-max
      padding-right: 360px

    @media $desktop-min
      width: auto
      text-align: left

    @media $mobile-max
      font-size: 26px
      padding-top: 60px
      padding-right: 0

  &__owners-order-price
    color: $color_main
    font-weight: 500

  &__content
    clearfix()

  &__part
    padding: 0
    clearfix()

  &__col-big
    float: left
    width: 75%
    padding-bottom: 40px

  &__col-small
    float: right
    width: 25%

  &__card-link
    display: none

    @media $tablet-max
      display: block

  &__participants-order
    padding: 28px 0 40px 0
    margin: 3px 0 10px 18px
    float: left
    width: calc(33.33% - 25px)


    @media $desktop
      width: calc(50% - 25px)

    @media $tablet-max
      width: calc(50% - 25px)

    @media $mobile-max
      width: calc(100% - 40px)

  &__empty-session
    height: 200px
    width: 100%
    text-align: center





.session__new
  border-bottom: 1px solid rgba($color_main , 0.5)
  
.choose-shop
  width: 100%
  border-collapse: separate
  border-spacing: 0
  overflow: hidden
  
  &__check
    margin: 0
    padding: 0
    color: #222
    position: relative
    top: -5px

  &__check-icon
    padding-top: 0
    position: relative
    top: 5px
  
  img
    width: 100px
    display: block
    margin: 0 auto
    
  .choose-shop__selected:after
    content: ''
    display: block
    background-color: rgba($color_main , 0.1)
    box-shadow: 0 0 20px rgba(#000, 0.2)
    position: absolute
    top:0
    left: 0
    width:100%
    height: 500px
    
  td
    position: relative
    font-size: 12px
    font-weight: 500
    color: #222
    padding: 15px 10px
    box-shadow: 1px 1px 0 0 rgba($color_main , 0.5)
    text-align: center
    max-width: 100px
    
    &:first-child
      text-align: right
      min-width: 150px
