.session-list-page
  border: $border_separator
  background-color: #fff
  padding: 10px 20px

  &__header
    font-size: 14px

  &__header-title
    display: inline-block
    width: 100%
    text-align: center

    @media $desktop-min
      width: auto
      text-align: left

    @media $mobile-max
      font-size: 26px

  &__header-button
    display: inline-block
    width: 100%

    @media $desktop-min
      position: absolute
      width: auto
      right: 20px
      margin: 35px 40px 0 0

    & .button
      @media $tablet-max
        display: block
        text-align: center
        margin: 0 auto
        width: 320px

      @media $mobile-sm
        width: 100%

  &__counter
    padding: 10px 0
    text-align: center

    &_counter-box
      display: inline-block
      width: auto
      text-transform: uppercase
      color: $color_count-box_text
      border: 3px solid $color_count-box_border
      padding: 10px

      &_number
        font-size: 20px
        color: $color_count-box_number

  &__content
