.menu-tabs
  padding: 0
  height: 100%

  &__content
    overflow: auto
    border-top: $border_separator
    font-size: 14px

  &__tab-selector
    display: none

  &__tab-label
    display: inline-block
    margin: 0 0 -1px 0
    padding: 15px 30px 12px 30px
    font-size: 14px
    font-weight: 500
    text-transform: uppercase
    text-decoration: none
    text-align: center
    color: $color_tab_label
    border-bottom: 2px solid transparent
    transition: color 0.3s ease, border-color 0.3s ease

    &:hover
      text-decoration: none
      cursor: pointer
      border-bottom-color: $color_main

    &:active
      color: rgba($color_main, 0.7)
      border-bottom-color: rgba($color_main, 0.7)

    &.active
      text-decoration: none
      color: $color_main
      border-bottom-color: $color_main

.selected
  color: $color_main
  border-bottom-color: $color_main
