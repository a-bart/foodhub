.cart
  min-width: 320px
  height: 100%
  overflow-x: hidden
  padding: 0
  padding-bottom: 105px 
  box-shadow: -1px 0 0 $color_main
  transition: transform 0.5s ease
  
  &__info-separator
    display: block
    width: 35px
    height: 35px
    position: absolute
    bottom: -15px
    left: 50%
    border-radius: 35px
    line-height: 32px
    text-align: center
    font-family: serif
    font-style: italic
    font-weight: 600
    font-size: 13px
    color: darken($color_main, 20%)
    border: 1px solid $color_main
    background-color: white
    transform: translate(-50%, 0)
  
  //cart__new-session-container--hidden
    
  &__new-session
    padding: 15px 0 45px 0
    position: relative
    margin-bottom: 30px
    
    
    &:after
    &:before
      content: ''
      display: block
      border-top: 1px solid $color_main
      width: 150%
      position: absolute
      left: -15px
      
    &:after
      top: 0
      
    &:before
      bottom: 0
      


  &_fixed
    position: fixed
    right: 0
    top: 0
    padding-top: $header_height
    padding-top: 0px
    z-index: 2

  @media $mobile-max
    width: 100%

  &__open-button
    position: absolute
    left: 0
    top: 0
    cursor: pointer
    height: 45px
    width: 60px
    border: 0
    border-top-left-radius: 2px
    border-bottom-left-radius: 2px
    transform: translateX(-100%)
    background-size: cover, 50%
    transition: transform 0.5s ease
    box-shadow: -1px 1px 4px rgba(0, 0, 0, .5)

    &_hidden
      display: none

    &:focus
      outline: 0

    &:hover
      background-color: $color_button_primary_hover
      
  &__icon.material-icons
    display: block
    color: #555
    font-size: 32px
    float: left
    padding-right: 10px
    padding-top: 0px
    margin-top: 10px
    
  &__title
    color: #222
    text-align: left
    font-size: 18px
    padding-top: 0px
    
    
    
  &__header
    width: 100%
    margin-top: 10px
    padding: 15px
   

    @media $desktop-min
      text-align: left

    @media $mobile-max
      font-size: 26px

  &__total-price
    color: $color_main
    font-weight: 500

  &__food-list
    padding: 15px
    padding-right: 10px
    max-height: calc(100vh - 320px)
    overflow-y: auto

    @media $mobile-max
      max-height: calc(100vh - 245px)

  &__action-buttons
    margin-top: 20px

  &__order-button
  &__join-button
  &__cancel-button
    text-align: center
    margin: 8px 0

.cart_open
  transform: translateX(0)

  .cart__header
    @media $mobile-max
      padding: 0 50px

  .cart__open-button
    @media $mobile-max
      transform: translateX(0)
      border-radius: 2px







.cart__new-session-container
  position: absolute
  bottom: 0
  left: 150%
  width: 100%;
  background-color: white
  padding: 0 15px
  padding-bottom: 20px
  //background-color: $color_main_dark
  //box-shadow: 15px 0 0 0 $color_main_dark,-15px 0 0 0 $color_main_dark;

.cart__new-session-container--visible
  transition: left 0.1s ease 0.6s
  position: absolute
  left: 0px
