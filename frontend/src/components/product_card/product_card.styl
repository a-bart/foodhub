$product-card_body_height = 100px
$product-card_footer_height = $product-card_body_height



.product-card
  display: block
  height: auto
  width: 100%
  max-width: 450px
  overflow: hidden
  background-color: white
  transition: box-shadow .2s
  box-shadow: 0 0 0 1px rgba($color_main, 0.2)
  position: relative

  &_active
    box-shadow: 1px 1px 5px 1px $color_main

  &:hover:not(&_active)
    box-shadow: 0 0 0 1px rgba($color_main, 1), 0 0 25px 1px rgba(#000, 0.2)

  &__header
    position: relative

  &__image-container
    position: relative
    height: 280px
    overflow: hidden

  &__image
    display: block
    width: 100%
    

    @media $mobile
      height: auto
      width: 102%
    

  &:hover &__description
    opacity: 1

  &__info
    position: absolute
    left: 0
    display: block
    margin: 0
    color: white
    width: 100%

  &__description
    top: 0
    padding: 15px 10px 100px 20px
    font-size: 12px
    font-weight: 400
    line-height: 18px
    background: linear-gradient(to bottom, rgba(#000, 0.5) 0, rgba(231, 56, 39, 0) 100%)
    transition: opacity 0.2s
    opacity: 0
  
  &__text_contaner
    width: 100%

  &__name
    bottom: 0
    padding: 0 10px
    color: #111
    text-align: center
    text-transform: uppercase
    font-size: 16px
    margin: 0
    height: auto
    font-weight: 500
    display: inline-block
    width: 100%
    
  &__price
    display: inline-block
    width: 100%
    margin: 5px auto
    text-align: center
    font-size: 18px
    color: $color_main

  &__body
    border-top: 1px solid rgba($color_main, 0.2)
    transition: border .2s ease 0.2s
    height: $product-card_body_height
    width: 100%
    padding-top: 0
    display: flex
    align-items: center
  
  &__label
    display: block
    width: 100%
    font-size: 11px
    color: #555

  &__half
    display: inline-block
    vertical-align: top
    width: 37%

    &-text-align-right
      text-align: right
      width: 60%

  

  
  &__footer
    text-align: center
    padding: 0 15px 20px 10px
    display: block
    height: $product-card_footer_height
    position: absolute
    width: 100%
    bottom: 0px
    left: 0
    color: white

    .product-card__price
      line-height: $product-card_footer_height
      height: $product-card_footer_height
      width: calc(100% - 120px)
      margin: 0
      color: white
      background-color: rgba($color_main, 1)
      position: absolute
      top: $product-card_footer_height
      left: 60px
      z-index: 1
      transition: top .2s ease 0.3s

  &__cart
    position: absolute
    background-color: rgba($color_main, 1)
    top: $product-card_footer_height
    right: 0
    z-index: 2
    width: 60px
    display: block
    height: 100%
    transition: top .2s ease 0.4s
    border-left: 1px solid white
    color: white
    &:hover
      background-color: $color_main_dark
  
  .counter
    opacity: 1
    
  &:hover
    .product-card__body
      border-top: 1px solid rgba($color_main, 1)
      
    .counter
    .product-card__cart
    .product-card__price
      top: 0
      


  &__cart-icon
    display: block
    transition: color .2s
    opacity: 0.8
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -60%)

.counter
  position: absolute
  background-color: rgba($color_main, 1)
  top: $product-card_footer_height
  left: 0
  z-index: 2
  width: 60px
  display: block
  height: 100%
  transition: all .2s ease 0.2s
  border-right: 1px solid white
  &:hover
    background-color: $color_main_dark
  
  &__value
    font-size: 14px
    font-weight: 500
    width: 100%
    position: absolute
    top: 50%
    left: 51%
    transform: translate(-55%, -55%)

    &:after
      content: " шт"

  &__up
  &__down
    display: flex
    align-items: center
    width: 90%
    color: white
    position: absolute
    height: 44px
    text-align: center
    left: 0
    text-decoration: none
    &:hover
    &:active
      text-decoration: none
    
  & .material-icons
    margin: 0 auto
    
  &__up
    top: 0
    
  &__down
    bottom: 0
