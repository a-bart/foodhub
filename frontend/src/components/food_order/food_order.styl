.food-order
  min-height: 70px
  height: auto
  overflow: hidden
  padding: 15px 0 15px 50px
  position: relative

  &.food-order_editable &__close
    display: block
    
  &__counter
    font-size: 11px
  
  &:hover .food-order__close
    opacity: 1

  &__close
    opacity: 0
    position: absolute
    display: none
    right: 0
    top: 18px
    font-style: normal
    cursor: pointer

  &__image-container
    height: 43px
    width: 43px
    position: absolute
    left: 0
    margin-top: 5px
    overflow: hidden
    border-radius: 50%

  &__image
    max-width: 100%

  &__glance-container
    min-height: 43px
    padding-left: 10px
    padding-top: 5px
    padding-bottom: 5px

  &__name
    text-align: left
    font-size: 12px
    padding-right: 15px
    margin-top: 0
    margin-bottom: 5px
    max-width: 200px
    overflow: hidden
    height: 14px

  &__quantity
    overflow: hidden

  &__basic-price
    float: left
    position: relative
    font-size: 12px
    padding-top: 4px

    &:after
      content: 'x'
      position: absolute
      right: -10px
      color: $color_food_order_seaprator

  &__quantity-input-container
    display: inline-block
    position: relative
    margin: 0
    margin-left: 15px
    float: left
    
    &:after
      content: ''
      position: absolute
      right: -20px
      top: 3px
      font-size: 12px
      color: $color_food_order_seaprator

  &__total-price
    float: right
    position: relative
    color: $color_main
    font-weight: 500
    font-size: 16px
    padding-top: 1px
