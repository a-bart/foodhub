.session-list
  margin: 0 auto
  max-width: 1280px
  width: 90%
  color: $color_main_font

  @media $desktop-min
    width: 85%

  @media $desktop-lg
    width: 80%

  &__row
    cleafix()
    padding: 20px 0
    border-bottom: 1px solid $color_session_list_row_border

  &__col
    padding: 10px
    vertical-align: middle
    font-size: 14px

    @media $desktop
        padding: 10px 5px

    @media $tablet-max
      text-align: center

    &_service
      col-12()
      text-align: center

      @media $desktop-min
        col-2()

      @media $mobile-max
        display: none

    &_desc
      col-12()

      @media $desktop-min
        col-3()

    &_author
      @media $desktop-min
        col-2()

      @media $tablet
        col-6()

      @media $mobile-max
        col-12()

    &_price
      @media $desktop-min
        col-2()

      @media $tablet
        col-6()

      @media $mobile-max
        col-12()

    &_button
      col-12()

      @media $desktop-min
        col-3()

  &__hide-on-mobile
    @media $mobile-max
      display: none

  &__service-img
    max-height: 100px
    max-width: 100%

  &__new-line
    display: block

  &__title
    color: $color_main
    font-weight: 500

    &_dark
      color: $color_main_font

    &_big
      display: block
      font-size: 20px
      color: $color_session_list_title_big

  &__button-preview
    margin: 0 auto
    color: $color_session_info_text
    background-color: $color_main
    height: 35px
    width: 150px
    padding: 0 16px
    text-align: center
    font-size: 12px
    cursor: pointer
    line-height: 35px
    text-transform: uppercase
    font-weight: 500
    box-shadow: 1px 1px 13px rgba(#000, 0.7)
    user-select: none

    &:hover
      background-color: $color_button_primary_hover

    &:active
      background-color: $color_button_primary_active
