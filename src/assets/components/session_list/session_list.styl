.session-list
  margin: 0 auto
  max-width: 1280px
  width: 90%
  color: $color_main_font

  @media $desktop-min
    width: 85%

  @media $desktop-lg
    width: 80%

  &__row
    padding: 20px 0 20px 0
    font-size: 0
    border-bottom: 1px solid $color_session_list_row_border

  &__col
    display: inline-block
    box-sizing: border-box
    padding: 10px
    vertical-align: middle
    font-size: 14px

    @media $desktop-lg
      &.d-lg1
        width: 8.3333333333%

      &.d-lg2
        width: 16.6666666667%

      &.d-lg3
        width: 25%

      &.d-lg4
        width: 33.3333333333%

      &.d-lg5
        width: 41.6666666667%

      &.d-lg6
        width: 50%

      &.d-lg7
        width: 58.3333333333%

      &.d-lg8
        width: 66.6666666667%

      &.d-lg9
        width: 75%

      &.d-lg10
        width: 83.3333333333%

      &.d-lg11
        width: 91.6666666667%

      &.d-lg12
        width: 100%

    @media $desktop
      &.d1
        width: 8.3333333333%

      &.d2
        width: 16.6666666667%

      &.d3
        width: 25%

      &.d4
        width: 33.3333333333%

      &.d5
        width: 41.6666666667%

      &.d6
        width: 50%

      &.d7
        width: 58.3333333333%

      &.d8
        width: 66.6666666667%

      &.d9
        width: 75%

      &.d10
        width: 83.3333333333%

      &.d11
        width: 91.6666666667%

      &.d12
        width: 100%

    @media $tablet
      &.t1
        width: 8.3333333333%

      &.t2
        width: 16.6666666667%

      &.t3
        width: 25%

      &.t4
        width: 33.3333333333%

      &.t5
        width: 41.6666666667%

      &.t6
        width: 50%

      &.t7
        width: 58.3333333333%

      &.t8
        width: 66.6666666667%

      &.t9
        width: 75%

      &.t10
        width: 83.3333333333%

      &.t11
        width: 91.6666666667%

      &.t12
        width: 100%

    @media $mobile-max
      &.m1
        width: 8.3333333333%

      &.m2
        width: 16.6666666667%

      &.m3
        width: 25%

      &.m4
        width: 33.3333333333%

      &.m5
        width: 41.6666666667%

      &.m6
        width: 50%

      &.m7
        width: 58.3333333333%

      &.m8
        width: 66.6666666667%

      &.m9
        width: 75%

      &.m10
        width: 83.3333333333%

      &.m11
        width: 91.6666666667%

      &.m12
        width: 100%

    &-service
      text-align: center

    &__service-img
      max-height: 100px
      max-width: 100%

    &__title
      color: $color_main

    &__title-big
      font-size: 20px
      color: $color_session_list_title_big
      font-weight: 600

    &__button-preview
      display: block
      margin: 0 auto
      color: $color_session_info_text
      background-color: $color_main
      height: 35px
      width: 150px
      padding: 0 16px
      text-align: center
      font-size: 12px
      cursor: pointer
      line-height: 35px
      text-transform: uppercase
      font-weight: 500
      box-shadow: 1px 1px 13px rgba(#000, 0.7)
      user-select: none

      &:hover
        background-color: $color_button_primary_hover

      &:active
        background-color: $color_button_primary_active

    @media $desktop
      &-author
        text-align: center

      &-price
        text-align: right

    @media $tablet-max
      text-align: center

    @media $mobile-max
      &-desc
        padding-bottom: 0

      &-author
        padding: 0 10px

      &-price
        padding-top: 0
