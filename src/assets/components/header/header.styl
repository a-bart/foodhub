.header
  box-shadow: 0 0 8px rgba(0,0,0,.5)
  width: 100%
  height: $header_height
  background-color: $color_main

  & > hr
    display: none

  &__center-column
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: flex-start
    height: $header_height
    position: relative
    margin: 0 40px

    @media $mobile-max
      margin: 0 5px

    & > hr
      display: none
  
  &__logo
    display: block
    width: 125px
    height $header_height
    color:transparent
    background-image: url("data:image/png;base64,")
    background-position: center 
    background-repeat: no-repeat
    background-size: auto 50px

    @media $mobile-sm
      width: 100px
      background-size: 100% auto


.my-profile
  display: flex
  flex-direction: row
  justify-content: flex-end
  align-items: center
  height: 100%
  width: auto
  padding: 0 20px
  position relative
  cursor: default
  transition:  background-color .1s

  &:hover 
    background-color: rgba(#000,.08)

    .my-profile__menu
      display: block
      
  @media $mobile-max 
    padding: 0 20px 0 10px


  &__menu
    card()
    display: none
    width: 100%
    height: auto
    position: absolute
    top: 85%
    right: 0
    padding: 5px 0px
    background-color: #fff
    z-index: 111

    &:after
      content: ""
      display: block
      width: 100%
      position: absolute
      top: -10px
      height: 10px

    @media $mobile-max
      width: 200px

    
  &__link-container
    list-style: none

    &:last-child:before
      content: ""
      display: block
      width: 80%
      height: 1px
      margin: 4px 4px 4px 10%
      border: none
      background-color: rgba(black,.2)

  &__link
    display: block
    padding: 4px 15px
    font-size: 14px
    line-height: 30px
    color: #222

    &:hover
      background-color: rgba($color_main,.2)
      text-decoration: none

  &__name
    line-height: $header_height
    color: white
    font-size: 16px
    font-weight: 400

    @media $mobile-max
      color: transparent
      display: none

  &__image-container
    display: block
    position: relative
    width: 40px
    height: 40px
    overflow: hidden
    margin-left: 10px
    border-radius: 20px
    background-color: #e2e2e2

  &__image
    height: 100%
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    margin: auto
