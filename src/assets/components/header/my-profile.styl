.my-profile
  display: flex
  flex-direction: row
  justify-content: flex-end
  align-items: center
  height: 100%
  width: auto
  padding: 0 20px
  position relative
  cursor: default
  transition: background-color .1s

  &:hover 
    background-color: rgba(#000,.08)

    .my-profile__menu
      display: block
      
  @media $mobile-max 
    padding: 0 20px 0 10px


  &__menu
    card()
    display: none
    width: 100%
    height: auto
    position: absolute
    top: 85%
    right: 0
    padding: 5px 0px
    background-color: #fff
    z-index: 1

    &:after
      content: ""
      display: block
      width: 100%
      position: absolute
      top: -10px
      height: 10px

    @media $mobile-max
      width: 200px

    
  &__link-container
    list-style: none

  &__top_separator::before
    content ""
    display: block
    margin: 4px 13px;
    border-top: 1px solid rgba(#000, 0.2);

  &__link
    display: block
    padding: 4px 20px
    font-size: 14px
    line-height: 30px
    color: #222

    &:hover
      background-color: rgba($color_main,.2)
      text-decoration: none

  &__name
    line-height: $header_height
    color: white
    font-size: 16px
    font-weight: 400

    @media $mobile-max
      display: none

  &__image-container
    display: block
    width: 40px
    height: 40px
    margin: 0 0px 0 20px
    position: relative
    border-radius: 20px
    overflow: hidden

  &__image
    min-width: 40px
    max-height: 60px
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%);
