.custom-select
  position: relative
  height: 25px
  line-height: 25px;

  &__options
    position: absolute
    height: 100%
    width: 100%
    border: 1px solid #999

  &__option
    display: none
    height: 100%
    width: 100%
    cursor: pointer
    truncate()
    padding-left: 5px
    padding-right: 25px

  &__option_selected
    display: block
    position: relative;

    &:after
      content: '\25BC'
      display: block
      position: absolute
      font-size: 14px
      color: #333
      top: 0
      bottom: 0
      right: 10px
      margin: auto
      height: 15px
      line-height: 15px
      cursor: pointer

  &__default-select
    display: none

  &.custom-select_open &__options
    height: 300%

  &.custom-select_open &__option
    display: block
    height: calc(100% / 3)
    padding-right: 5px

    &:hover
      background-color: #3B97F3
      color: #fff

  &.custom-select_open &__option_selected
    border-bottom: 1px solid #999
    padding-right: 25px
