.button
  color: $color_session_info_text
  background-color: $color_main
  padding: 10px 20px
  text-align: center
  font-size: 14px
  cursor: pointer
  line-height: 35px
  text-transform: uppercase
  font-weight: 500
  box-shadow: 1px 1px 5px rgba(#000, 0.7)
  user-select: none

  &:hover
    background-color: $color_button_primary_hover
    text-decoration: none

  &:active
    background-color: $color_button_primary_active

  &_transparent
    padding: 8px 10px
    border-radius: 2px
    color: $color_main
    background-color: transparent
    box-shadow: none

    &:hover
      background-color: rgba($color_main, 0.2);
      text-decoration: none

  &_big
    padding: 12px 20px

  &_biger
    padding: 12px 75px
