.text-input
  padding-top: 14px
  position: relative

  &_invert &__input
    color: $color_form_text_invert
    background-color: $color_form_invert_input_bg

  &__input
    font-size: 16px
    height: 29px
    line-height: 29px
    color: $color_form_text
    border: 0
    border-bottom: 1px solid $color_form_secondary
    outline: none
    width: 66%

    &_short
      width: 150px

    &_regular
      width: auto

    &_long
      width: 100%

    &:focus
      border-bottom: 2px solid $color_main

      & + .text-input__headline
        color: $color_main

  &__headline
    font-size: 12px
    color: $color_form_secondary
    position: absolute
    top: 0
    left: 0
