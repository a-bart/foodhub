.quantity-input
  display: inline-block
  
  &__button
    border: 1px solid #999
    border-radius: 3px
    width: 17px
    display: inline-block
    margin: 1px 2px
    padding: 1px 0px;
    text-align: center
    cursor: pointer
    font-size: 14px
    user-select: none
        
    &:hover
      background-color: $color_main
      box-shadow: 1px 1px 1px rgba(0,0,0,0.5)

    &:active
      background-color: rgba($color_main, 0.8)
      box-shadow: inset 0 -1px 1px rgba(0,0,0,.1), inset 0 1px 2px rgba(0,0,0,.3) 

  &__counter
    display: inline-block