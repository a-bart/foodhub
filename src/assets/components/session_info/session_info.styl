.session-info
  background-color: $color_session_info_bg
  padding: 46px 39px
  box-sizing: border-box
  font-size: 0

  @media $mobile-max
    padding: 33px 28px

  &__header
    font-size: 34px
    color: $color_session_info_text
    margin-top: 0
    font-weight: 500

  &__info-column
    display: inline-block
    width: 29.3%
    margin: 0 3%
    max-width: 250px
    vertical-align: top

    @media $tablet-max
      width: 100%
      max-width: 10000px
      margin: 0

    &:first-of-type
      margin-left: 0
      margin-top: 0

    &:last-of-type
      margin-right: 0
      margin-bottom: 0

  &__info-element
    margin: 5px 0

  &__info-label
    color: $color_session_info_label
    font-size: 16px
    margin-right: 5px

  &__info-value
    color: $color_session_info_label
    font-size: 16px
    font-weight: 600

  &__shop-select
    background-color: transparent
    border: none
    font-size: 18px
    color: $color_session_info_text
    outline-color: #999;
    width: 100%
    height: 25px
    padding-bottom: 6px
    margin-bottom: 9px    

    .custom-select__options
      border: none
      background-color: $color_session_info_bg

    .custom-select__option
      padding-left: 0

    .custom-select__option_selected
      border-bottom: 1px solid #666 !important

    .custom-select__option_selected:after
      color: $color_session_info_label

    .custom-select_open .custom-select__option:hover
      background-color: transparent
      color: $color_session_info_text
      text-decoration: underline

    .custom-select_open .custom-select__option_selected:after
      color: #bbb

  &__shop-option
    background-color: $color_session_info_bg
    outline: none
    border: none

  &__input-label
    color: $color_session_info_label
    font-size: 14px

  &__input
    background: transparent
    border: none
    border-bottom: 1px solid #666
    color: $color_session_info_text
    font-size: 18px
    outline-color: #999;
    width: 100%
    height: 25px
    padding: 5px 0
    padding-bottom: 6px
    margin-bottom: 9px    
