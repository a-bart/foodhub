.session-info
  background-color: $color_session_info_bg
  padding: 46px 39px
  box-sizing: border-box
  font-size: 0

  @media $mobile-max
    padding: 33px 28px

  &__header
    font-size: 34px
    color: $color_session_info_text
    margin-top: 0
    font-weight: 500

  &__column
    display: inline-block
    width: 29.3%
    margin: 0 3%
    max-width: 250px
    vertical-align: top

    @media $tablet-max
      width: 100%
      max-width: 10000px
      margin: 0

    &:first-of-type
      margin-left: 0
      margin-top: 0

    &:last-of-type
      margin-right: 0
      margin-bottom: 0

  &__element
    margin: 5px 0

    .text-input
      margin: 0

      &__input
        background: 0
        border: 0
        border-bottom: 1px solid $color_session_info_input_border
        color: $color_session_info_text
        font-size: 16px
        line-height: 16px
        padding: 3px 0
        margin-bottom: 5px

      &__headline
        color: $color_session_info_label

  &__label
    color: $color_session_info_label
    font-size: 14px
    margin-right: 5px

  &__value
    color: $color_session_info_text
    font-size: 14px

  &__link
    font-size: 14px

  &__select
    background: 0
    border: 0
    border-bottom: 1px solid $color_session_info_input_border
    color: $color_session_info_text
    font-size: 16px
    width: 100%
    margin-bottom: 5px
    height: 29px
    outline: 0

    &:not([readonly]):not([disabled]):focus
      border-bottom: 2px solid $color_main

  &__option
    color: $color_select_text

  &__input-label
    color: $color_session_info_label
    font-size: 12px
