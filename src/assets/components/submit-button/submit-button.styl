.submit-button
  display: block
  color: $color_session_info_text
  background-color: $color_main
  height: 40px
  width: 180px
  padding: 0 16px
  text-align: center
  font-size: 14px
  cursor: pointer
  line-height: 40px
  text-transform: uppercase
  font-weight: 500
  box-shadow: 1px 1px 5px rgba($color_regular_shadow, 0.7)
  user-select: none

  &:hover
    background-color: $color_button_hover
    text-decoration: none

  &:active
    background-color: $color_button_active
    color: $color_main
