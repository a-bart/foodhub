.product-card
  display: block
  height: auto
  width: 100%
  max-width: 280px
  overflow: hidden
  margin: 15px
  box-shadow: 1px 1px 7px rgba(black, 0.4)
  border-radius: 3px
  background-color: white
  transition: box-shadow .15s
  
  &:first-child
    margin-left: 0
    
  &:last-child
    margin-right: 0
  
  &_active
    box-shadow: 1px 1px 8px 2px $color_main
    
  //Если объект добавлен в корзину, т.е. _active, то скрыть кнопку "Добавить в корзину"
  &_active &__action_add
    display: none
    
  //Если объект не добавлен в корзину, т.е. не _active, то скрыть кнопку "Удалить из корзины"
  &:not(&_active) &__action_delete
    display: none
    
  &:hover
    box-shadow: 1px 1px 7px rgba(black, 0.6)

  &__header
    position: relative

  &__image-container
    position: relative
    height: 200px
    background-color: $color_main
    
  &__image
    display: block
    height: 100%
  
  &:hover &__description
    opacity: 1

  &__description
    position: absolute
    left: 0
    top: 0
    display: block
    height: auto
    width: 100%
    margin: 0
    padding: 15px 10px 80px 20px
    font-size: 12px
    font-weight: 400
    line-height: 18px
    background: linear-gradient(to bottom, rgba(0,0,0,0.8) 0%, rgba(231,56,39,0) 100%)
    color: white
    transition: opacity 0.2s
    opacity: 0

  &__name
    position: absolute
    left: 0
    bottom: 0px
    display: block
    height: auto
    width: 100%
    margin: 0
    padding: 45px 10px 10px 20px
    font-size: 18px
    font-weight: 500
    background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(231,56,39,0) 100%)
    color: white
  
  &__body
    display: flex
    justify-content: space-between
    padding: 15px 20px 0px 20px

  &__label
    display: block
    font-size: 11px
    color: #555
    
  &__half
    height: 53px

    & + & *
      text-align: right

  &__price
    margin: 0
    font-size: 24px
    color: #111
  
  &__footer
    padding: 0px 15px 15px 10px
    
  &__action
    text-transform: uppercase
    font-size: 14px
    font-weight: 500
    padding: 8px 10px
    border-radius: 2px
    text-decoration: none
    &:hover
      background-color: rgba($color_main, 0.2)
      text-decoration: none
