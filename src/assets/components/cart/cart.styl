.cart  
  &__header
    page_header_title()

    @media $mobile-max
      font-size: 26px

  &__total-price
    color: $color_main
    font-weight: 500

  &__food-list
    max-height: calc(100vh - 210px)
    overflow-y: auto
    padding: 0 20px

    @media $mobile-max
      max-height: calc(100vh - 245px)

  &__action-buttons
    margin-top: 20px
    padding: 0 20px

  &__order-button
  &__join-button
  &__cancel-button
    text-align: center
    margin: 8px 0


  &_fixed
    position: absolute
    top: 0
    bottom: 0;
    margin: auto
    height: 100%;
    width: 350px
    right: 0
    z-index: 20
    overflow: hidden
    background: #e5e5e5
    border-left: $border_separator

    @media $mobile-max
      width: 100%
      height: 45px
      bottom: auto
      border: $border_separator
      
    & .cart__header
      height: 100%
      text-decoration: underline

      @media $mobile-max
        padding-top: 10px
        font-size: 18px

    &:hover
      background: #fff
      box-shadow: 0 0 40px rgba(#000, 0.8)
      height: auto
      bottom: auto

      & .cart__header
        height: auto
