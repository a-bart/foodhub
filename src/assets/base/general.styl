* 
  box-sizing: border-box

html
  height: 100%

body
  default_font()
  min-width: 320px
  min-height: 100%
  position: relative
  color: $color_body_text
  background-color: $color_primary_bg
  padding-bottom: $footer_height

h1
  font-size: 35px

h2
  font-size: 24px

h3
  font-size: 16px

a 
  color: $color_main
  text-decoration: none
  cursor: pointer
  outline: none

  &:hover, &:focus
    text-decoration: underline


.main-content

  &__column
    margin: 0 40px

    @media $mobile-max
      margin: 0 5px
